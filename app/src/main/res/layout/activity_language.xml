<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LanguageActivity">

    <ImageButton
        android:id="@+id/english"
        android:layout_width="111dp"
        android:layout_height="109dp"
        android:layout_marginTop="290dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="20dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:padding="8dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/turkish"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.158"
        app:srcCompat="@drawable/american" />

    <ImageButton
        android:id="@+id/turkish"
        android:layout_width="114dp"
        android:layout_height="109dp"
        android:layout_marginStart="39dp"
        android:layout_marginEnd="19dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:padding="8dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/english"
        app:layout_constraintEnd_toStartOf="@+id/english"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/english"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/turkish" />

    <TextView
        android:id="@+id/languageText"
        android:layout_width="283dp"
        android:layout_height="96dp"
        android:layout_marginTop="185dp"
        android:layout_marginBottom="3dp"
        android:fontFamily="@font/alike"
        android:text="Choose Your Language"
        android:textAlignment="center"
        android:textColor="#100F12"
        android:textSize="35sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/turkish"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.539"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>